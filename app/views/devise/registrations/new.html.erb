<div class="container">
  <div class="row">
   <div class="col-sm-4"></div>
   <div class="col-sm-4">
   </br></br></br>
     <h2>Registrarse</h2></br>

     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= devise_error_messages! %>

       <div class="form-group">

         <%= f.input :email, label: "Correo electrónico", required: true, autofocus: true, class: "form-control" %>
         <%= f.input :password, label: "Contraseña", required: true, hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length), class: "form-control" %>
         <%= f.input :password_confirmation, label: "Confirmar contraseña", required: true, class: "form-control" %>
       </div>

       <div class="form-group">
         <%= f.button :submit, "Registrarse", class: "btn btn-primary" %>
       </div>
    <% end %>

     <%= render "devise/shared/links" %>
   </div>
   <div class="col-sm-4"></div>
  </div>
</div>
