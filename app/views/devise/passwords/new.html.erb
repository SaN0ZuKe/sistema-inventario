<div class="container">
  <div class="row">
   <div class="col-sm-4"></div>
   <div class="col-sm-4">
     </br></br></br>
     <h2> ¿Olvido su contraseña? </h2></br>

     <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
       <%= f.error_notification %>

       <div class="form-inputs">
         <%= f.input :email, label: "Correo electronico", required: true, autofocus: true %>
       </div>

       <div class="form-actions">
         <%= f.button :submit, "Enviame las instrucciones",class: "btn btn-primary" %>
       </div>
     <% end %></br>

     <%= render "devise/shared/links" %>
   </div>
   <div class="col-sm-4"></div>
  </div>
</div>
